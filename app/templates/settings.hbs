

{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools class="navbar"}}
    {{#link-to 'home'}}
      {{#paper-icon "keyboard_arrow_left" size=36}}{{/paper-icon}}
    {{/link-to}}
    <span class="flex"></span>
    <h1>SETTINGS</h1>
  {{/toolbar.tools}}
{{/paper-toolbar}}


<div class="layout-row layout-align-space-around-center spacing">

<div class="borderbox">
      {{#paper-card class="layout row layout-align-center-center setthead" as |card|}}
        <h2>Users</h2>
      {{/paper-card}}

      <div class="scroll-div">
        {{#paper-list}}
          {{#each users as |user|}}
          {{#paper-card class="users" as |card|}}
              {{#paper-item}}
                   <h3>{{user.id}}. {{user.name }}</h3>
                  <span class="flex"></span>
                   {{#paper-button onClick=(action "deleteUser" user.id) iconButton=true}}{{#paper-icon "clear"}}{{/paper-icon}}{{/paper-button}}
              {{paper-divider}}
              {{/paper-item}}
              {{/paper-card}}
          {{/each}}
        {{/paper-list}}
       </div>

     <div class="layout row layout-align-center-center">
           <!-- {{#paper-icon "account_box" size=36}}{{/paper-icon}} -->
           {{paper-input label="User name" value=newUser onChange=(action (mut newUser))}}
           {{#paper-button onClick=(action "addUser" newUser)}}{{#paper-icon "add_box" size=36}}{{/paper-icon}}{{/paper-button}}
     </div>
</div>





<div class="borderbox">
  {{#paper-card class="layout row layout-align-center-center setthead" as |card|}}
<h2>Task types</h2>
{{/paper-card}}
       <div class="scroll-div">
      {{#paper-list}}
        {{#each tasktypes as |tasktype|}}
        {{#paper-card class="taskt" as |card|}}
            {{#paper-item}}

                 <h3>{{tasktype.id}}. {{tasktype.name }}</h3>
                 <span class="flex"></span>
                  {{#paper-button onClick=(action "deleteTaskType" tasktype.id) iconButton=true}}{{#paper-icon "clear"}}{{/paper-icon}}{{/paper-button}}
            {{paper-divider}}
            {{/paper-item}}
            {{/paper-card}}
        {{/each}}
      {{/paper-list}}
</div>
<div class="layout row layout-align-center-center">
       {{paper-input label="Task type" value=newTaskType onChange=(action (mut newTaskType))}}
       {{#paper-button onClick=(action "addTaskType" newTaskType)}}{{#paper-icon "add_box" size=36}}{{/paper-icon}}{{/paper-button}}
</div>
   </div>

 </div>
